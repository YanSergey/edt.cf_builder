<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="ru.yanygin.dt.cfbuilder.plugin.ui.buildcf"
            name="%command.BuildCf.name">
      </command>
      <command
            id="ru.yanygin.dt.cfbuilder.plugin.ui.importcf"
            name="%command.ImportCf.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ru.yanygin.dt.cfbuilder.plugin.ui.ExecutableExtensionFactory:ru.yanygin.dt.cfbuilder.plugin.ui.ExportHandler"
            commandId="ru.yanygin.dt.cfbuilder.plugin.ui.buildcf">
      </handler>
      <handler
            class="ru.yanygin.dt.cfbuilder.plugin.ui.ExecutableExtensionFactory:ru.yanygin.dt.cfbuilder.plugin.ui.ImportHandler"
            commandId="ru.yanygin.dt.cfbuilder.plugin.ui.importcf">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:com._1c.g5.v8.dt.navigator.ui.navigator.popup?endof=group.port">
         <command
               commandId="ru.yanygin.dt.cfbuilder.plugin.ui.buildcf"
               icon="icons/cf16.png"
               label="%command.BuildCf.name"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <with
                        variable="selection">
                     <count
                           value="1">
                     </count>
                     <iterate
                           operator="and">
                        <instanceof
                              value="org.eclipse.core.resources.IProject">
                        </instanceof>
                        <or>
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="com._1c.g5.v8.dt.core.V8ConfigurationNature">
                           </test>
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="com._1c.g5.v8.dt.core.V8ExtensionNature">
                           </test>
                        </or>
                     </iterate>
                  </with>
               </and>
            </visibleWhen>
         </command>
         <command
               commandId="ru.yanygin.dt.cfbuilder.plugin.ui.importcf"
               icon="icons/cf16.png"
               label="%command.ImportCf.name"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <with
                        variable="selection">
                     <or>
                        <count
                              value="0">
                        </count>
                        <and>
                           <count
                                 value="1">
                           </count>
                           <iterate
                                 operator="and">
                              <instanceof
                                    value="org.eclipse.core.resources.IProject">
                              </instanceof>
                              <or>
                                 <test
                                       property="org.eclipse.core.resources.projectNature"
                                       value="com._1c.g5.v8.dt.core.V8ConfigurationNature">
                                 </test>
                                 <test
                                       property="org.eclipse.core.resources.projectNature"
                                       value="com._1c.g5.v8.dt.core.V8ExtensionNature">
                                 </test>
                              </or>
                           </iterate>
                        </and>
                     </or>
                  </with>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:file?endof=export">
         <command
               commandId="ru.yanygin.dt.cfbuilder.plugin.ui.importcf"
               icon="icons/cf16.png"
               label="%command.BuildCf.name"
               style="push">
         </command>
         <command
               commandId="ru.yanygin.dt.cfbuilder.plugin.ui.importcf"
               icon="icons/cf16.png"
               label="%command.ImportCf.name"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
